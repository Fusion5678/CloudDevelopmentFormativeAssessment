@model VenueDBApp.Data.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">Create New Booking</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="EventId" class="control-label">Event <span class="text-danger">*</span></label>
                            <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventID" required>
                                <option value="">-- Select an event --</option>
                            </select>
                            <span asp-validation-for="EventId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="VenueId" class="control-label">Venue <span class="text-danger">*</span></label>
                            <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueID" required>
                                <option value="">-- Select a venue --</option>
                            </select>
                            <span asp-validation-for="VenueId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="BookingDate" class="control-label">Booking Date <span class="text-danger">*</span></label>
                            <input asp-for="BookingDate" class="form-control" type="date" required min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                            <small class="form-text text-muted">Booking date cannot be in the past.</small>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Booking
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 