@model IEnumerable<VenueDBApp.Data.BookingSummary>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Bookings</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Booking
                </a>
            </div>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" 
                                       name="searchString" 
                                       value="@ViewData["SearchString"]" 
                                       class="form-control" 
                                       placeholder="Search by Booking ID or Event Name..." />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="btn-group w-100" role="group">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Clear
                                </a>
                            </div>
                        </div>
                    </form>
                    @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
                    {
                        <div class="mt-2">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i> 
                                Showing results for: "<strong>@ViewData["SearchString"]</strong>"
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-hashtag"></i> Booking #@item.BookingId
                        </h6>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.EventName</h5>
                        <p class="card-text">
                            <i class="fas fa-calendar"></i> 
                            <strong>Event Date:</strong> @item.EventDate.ToString("MMM dd, yyyy")
                        </p>
                        <p class="card-text">
                            <i class="fas fa-bookmark"></i> 
                            <strong>Booked:</strong> @item.BookingDate.ToString("MMM dd, yyyy")
                        </p>
                        <p class="card-text">
                            <i class="fas fa-building"></i> 
                            <strong>Venue:</strong> 
                            <a asp-controller="Venues" asp-action="Details" asp-route-id="@item.VenueId">
                                @item.VenueName
                            </a>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
                    {
                        <i class="fas fa-search fa-4x text-muted mb-3"></i>
                        <h3 class="text-muted">No bookings found</h3>
                        <p class="text-muted">No bookings match your search criteria: "<strong>@ViewData["SearchString"]</strong>"</p>
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-times"></i> Clear Search
                        </a>
                    }
                    else
                    {
                        <i class="fas fa-bookmark fa-4x text-muted mb-3"></i>
                        <h3 class="text-muted">No bookings found</h3>
                        <p class="text-muted">Get started by adding your first booking.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First Booking
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div> 