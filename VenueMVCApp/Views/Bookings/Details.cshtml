@model VenueDBApp.Data.BookingSummary

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">Booking Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Booking Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Booking ID:</dt>
                                <dd class="col-sm-8">@Model.BookingId</dd>
                                
                                <dt class="col-sm-4">Booking Date:</dt>
                                <dd class="col-sm-8">@Model.BookingDate.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4">Event:</dt>
                                <dd class="col-sm-8">@Model.EventName</dd>
                                
                                <dt class="col-sm-4">Event Date:</dt>
                                <dd class="col-sm-8">@Model.EventDate.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4">Venue:</dt>
                                <dd class="col-sm-8">@Model.VenueName</dd>
                                
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <dt class="col-sm-4">Description:</dt>
                                    <dd class="col-sm-8">@Model.Description</dd>
                                }
                            </dl>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Booking
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Event Information</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.EventName</h6>
                    <p class="text-muted">@Model.EventDate.ToString("MMM dd, yyyy")</p>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p>@Model.Description</p>
                    }
                    <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-info-circle"></i> View Event Details
                    </a>
                </div>
            </div>
            
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Venue Information</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.VenueName</h6>
                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <p class="text-muted">@Model.Location</p>
                    }
                    @if (Model.Capacity.HasValue)
                    {
                        <p class="text-muted">Capacity: @Model.Capacity</p>
                    }
                    <a asp-controller="Venues" asp-action="Details" asp-route-id="@Model.VenueId" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-info-circle"></i> View Venue Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
